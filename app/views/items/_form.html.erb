<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category_id, collection: Category.all %>
    <%= f.input :special %>
    <%= f.input :photo %>
  </div>

  <div class="actions">
    <%= f.button :submit, class: 'btn' %>
  </div>
<% end %>
