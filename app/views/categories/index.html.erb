<h1>Категории</h1>


<% @categories.each do |category| %>
    <% if category.items.any? %>
        <div class="category-element">
          <div class="name">
            <%= link_to category.name, category %>
          </div>
          <% if signed_in? %>
              <div class="edit">
                <%= link_to 'Редактировать', edit_category_path(category) %>
              </div>
              <div class="delete">
                <%= link_to 'Уничтожить', category, method: :delete, confirm: 'Точно-точно удалить?' %>
              </div>
          <% end %>
        </div>
    <% end %>
<% end %>


<% if signed_in? %>
    <%= link_to 'Создать новую категорию', new_category_path, class: 'btn' if signed_in? %>
<% end %>